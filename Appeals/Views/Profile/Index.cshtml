@{
    ViewData["Title"] = "User Profile";
}

<div class="profile-container">
    <h1>User Profile</h1>
    <form id="userProfileForm" asp-controller="Profile" asp-action="Save" method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input id="Name" class="form-control" required />
            <span validation="Name" class="error-message"></span>
        </div>

        <div class="form-group">
            <label for="Surname">Surname</label>
            <input id="Surname" class="form-control" required />
            <span validation="Surname" class="error-message"></span>
        </div>

        <div class="form-group">
            <label for="MiddleName">MiddleName</label>
            <input id="MiddleName" class="form-control" />
        </div>

        <div class="form-group">
            <label for="DateOfBirth">DateOfBirth</label>
            <input id="DateOfBirth" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input id="Email" type="email" class="form-control" required />
            <span validation="Email" class="error-message"></span>
        </div>

        <div class="address-group">
            <div class="form-group">
                <label for="City">City</label>
                <div class="input-with-suggestions">
                    <input id="City" class="form-control" required />
                    <div class="suggestions" id="citySuggestions"></div>
                </div>
                <span validation="City" class="error-message"></span>
            </div>

            <div class="form-group">
                <label for="Street">Street</label>
                <div class="input-with-suggestions">
                    <input id="Street" class="form-control" required />
                    <div class="suggestions" id="streetSuggestions"></div>
                </div>
                <span validation="Street" class="error-message"></span>
            </div>

            <div class="form-group">
                <label for="House">House</label>
                <input id="House" class="form-control" required />
                <span validation="House" class="error-message"></span>
            </div>

            <div class="form-group">
                <label for="Apartment">Apartment</label>
                <input id="Apartment" class="form-control" required />
                <span validation="Apartment" class="error-message"></span>
            </div>
        </div>

        <div class="button-group">
            <button type="button" id="exitBtn" class="btn btn-secondary">Exit</button>
            <button type="button" id="cancelBtn" class="btn btn-secondary hidden">Cancel</button>
            <button type="submit" id="saveBtn" class="btn btn-primary hidden">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~\js\userProfile.js"></script>
}
